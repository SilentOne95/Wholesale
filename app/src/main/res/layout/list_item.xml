<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corners_button_accent">

        <TextView
            android:id="@+id/item_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/mid_value"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/item_text_size_primary"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_full_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/mid_value"
            android:layout_marginTop="@dimen/small_value"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/item_text_size_primary"
            app:layout_constraintBottom_toTopOf="@+id/item_country"
            app:layout_constraintStart_toEndOf="@+id/item_id"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/mid_value"
            android:layout_marginBottom="@dimen/small_value"
            android:textColor="@color/colorPrimaryLight"
            android:textSize="@dimen/item_text_size_secondary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/item_id"
            app:layout_constraintTop_toBottomOf="@+id/item_full_name" />

        <ImageButton
            android:id="@+id/item_button"
            android:layout_width="@dimen/item_button_width"
            android:layout_height="@dimen/item_button_height"
            android:layout_margin="@dimen/mid_value"
            android:background="@drawable/rounded_corners_button_primary"
            android:src="@drawable/icon_eye"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
